import turtle

t=turtle.Turtle()
def heart():
    t.speed(10)
    t.pensize(5)
    t.getscreen().bgcolor("grey")
    t.color("black","red")
    t.begin_fill()
    t.lt(140)
    t.fd(180)
    t.circle(-100,190)
    t.lt(100)
    t.circle(-100,190)
    t.fd(184)
    t.hideturtle()
    t.end_fill()
heart()

turtle.done()
